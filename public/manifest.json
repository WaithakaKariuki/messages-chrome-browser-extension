{
  "manifest_version":3,
  "version":"1.0.0",
  "name": "My Messages",
  "action":{
   "default_popup": "index.html"
  },
  "permissions":[
    "scripting",
    "storage",
    "notifications",
    "alarms",
    "webRequest",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "http://localhost:3000/messages"
  ],
  "icons": {
    "128": "./images/icon128.png"
  }
}
